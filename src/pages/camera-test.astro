---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import CameraCapture from "../components/CameraCapture.astro";
---

<Layout>
  <Fragment slot="head">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,600&family=Space+Grotesk:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
  </Fragment>

  <main class="min-h-screen px-5 pb-14 pt-10 sm:px-8 lg:px-14">
    <div class="mx-auto flex max-w-5xl flex-col gap-8">
      <PageHeader
        label="Camera Test"
        title="Capture a photo from your device"
        description="Tap the button to open your device camera, take a picture, and see it appear instantly below."
      />

      <CameraCapture />
    </div>
  </main>
</Layout>
